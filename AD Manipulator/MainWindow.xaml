<Window x:Class="AD_Manipulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AD_Manipulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#112233">
    <Grid>
        <Label Content="Blake's AD Manager" HorizontalAlignment="Left" Margin="-4,0,0,0" VerticalAlignment="Top" FontSize="24" Foreground="White" />
        <TextBox Name="passwordTB"  HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="201" Margin="17,356,0,0" TextChanged="TextBox_TextChanged" Visibility="Hidden"/>
        <Label Content="Password For Domain" HorizontalAlignment="Left" Margin="17,318,0,0" VerticalAlignment="Top" FontSize="18" Foreground="White" Visibility="Hidden" />
        <Button Click="Submit_Click" Name="Submit" Content="Submit" HorizontalAlignment="Left" Margin="0,394,0,0" VerticalAlignment="Top" Width="168" Height="25"/>
        <DataGrid Name="dt" HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="369" Margin="423,0,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name"></DataGridTextColumn>
                <DataGridTextColumn Header="Email"></DataGridTextColumn>
                <DataGridTextColumn Header="Phone Number"></DataGridTextColumn>
                <DataGridTextColumn Header="RingCentral Number"></DataGridTextColumn>
                <DataGridTextColumn Header="Office"></DataGridTextColumn>
                <DataGridTextColumn Header="" Width="*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
